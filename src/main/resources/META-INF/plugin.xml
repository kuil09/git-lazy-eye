<idea-plugin>
    <id>kuil09.git-lazy-eye</id>
    <name>GitLazyEye</name>
    <vendor url="https://github.com/kuil09/git-lazy-eye">kuil09</vendor>
    <version>2.0.0</version>
    <description>Set different editor background images per Git branch.</description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.vcs</depends>
    <depends>Git4Idea</depends>

    <idea-version since-build="241"/>

    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity implementation="hwang.gg.gitLazyEye.GitLazyEyeStartup"/>
    </extensions>

    <actions>
        <action id="GitLazyEye.Action"
                class="hwang.gg.gitLazyEye.SimpleAction"
                text="Git Lazy Eye"
                description="Set editor background image per Git branch">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>
